<Window x:Class="WPF_API.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_API"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="LabelPayerName" Content="Name" HorizontalAlignment="Left" Height="25" Margin="3,73,0,0" VerticalAlignment="Top" Width="48"/>
        <Label x:Name="LabelInvoice" Content="Invoice" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelPayer" Content="Payer" HorizontalAlignment="Left" Margin="113,29,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelReciever" Content="Reciever" HorizontalAlignment="Left" Margin="689,29,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelRecieverName" Content="Name" HorizontalAlignment="Left" Height="25" Margin="570,68,0,0" VerticalAlignment="Top" Width="48"/>
        <Label x:Name="LaberPayerAdress" Content="Adress" HorizontalAlignment="Left" Margin="4,103,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LaberRecieverAdress" Content="Adress" HorizontalAlignment="Left" Margin="573,98,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelPayerNumber" Content="Number" HorizontalAlignment="Left" Margin="8,134,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelRecieverNumber" Content="Number" HorizontalAlignment="Left" Margin="573,134,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelPayerIBAN" Content="IBAN" HorizontalAlignment="Left" Margin="14,165,0,0" VerticalAlignment="Top"/>
