        <Label x:Name="LabelDate" Content="Date" HorizontalAlignment="Left" Margin="21,221,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelDescription" Content="Description" HorizontalAlignment="Left" Margin="0,247,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelCurrency" Content="Currency" HorizontalAlignment="Left" Margin="13,305,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelModel" Content="Model" HorizontalAlignment="Left" Margin="6,374,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PayerName" HorizontalAlignment="Left" Margin="72,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PayerAdress" HorizontalAlignment="Left" Margin="72,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PayerNumber" HorizontalAlignment="Left" Margin="72,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PayerIBAN" HorizontalAlignment="Left" Margin="72,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="Emergency" Content="" HorizontalAlignment="Left" Margin="77,197,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Amount" HorizontalAlignment="Left" Margin="77,278,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="Date" HorizontalAlignment="Left" Margin="77,223,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Description" HorizontalAlignment="Left" Margin="77,255,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="Currency" HorizontalAlignment="Left" Margin="77,307,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="USD"/>
            <ComboBoxItem Content="CAD"/>
            <ComboBoxItem Content="CZK"/>
            <ComboBoxItem Content="USD"/>
            <ComboBoxItem Content="KN"/>
            <ComboBoxItem Content="EUR"/>
        </ComboBox>
        <ComboBox x:Name="Model" HorizontalAlignment="Left" Margin="77,377,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="00"/>
            <ComboBoxItem Content="01"/>
            <ComboBoxItem Content="02"/>
        </ComboBox>
        <TextBox x:Name="RecieverName" HorizontalAlignment="Left" Margin="639,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="RecieverAdress" HorizontalAlignment="Left" Margin="639,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="RecieverNumber" HorizontalAlignment="Left" Margin="639,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Upisi" Content="Upisi" HorizontalAlignment="Left" Margin="544,320,0,0" VerticalAlignment="Top" Height="32" Width="112" Click="Upisi_Click"/>
        <Button x:Name="Ispisi" Content="Ispisi" HorizontalAlignment="Left" Margin="660,320,0,0" VerticalAlignment="Top" Height="32" Width="112" Click="Ispisi_Click"/>
        <Label Content="Tecaj:" HorizontalAlignment="Left" Height="33" Margin="10,336,0,0" VerticalAlignment="Top" Width="55"/>
        <TextBox x:Name="TecajIspis" HorizontalAlignment="Left" Height="33" Margin="77,336,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="IspisiTecaj" Content="Tecaj" HorizontalAlignment="Left" Height="30" Margin="417,320,0,0" VerticalAlignment="Top" Width="118" Click="IspisiTecaj_Click"/>

